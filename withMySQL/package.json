{
  "name": "flash-mobile-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@bitbucket.org:smartsolutionteam/flash-mobile-api.git",
  "author": "Leonardo Ghiggino <leonardo.ghiggino@calindra.com.br>",
  "license": "MIT",
  "scripts": {
    "test": "jest --watchAll",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "dev2": "nodemon --ignore src/routes.ts --ignore load-test/*.js --ext ts,js --exec 'yarn tsoa:routes && ts-node src/app.ts'",
    "tsoa:routes": "yarn tsoa routes -c ./tsoa.json",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node build/src/app.js",
    "whileBuilding": "nodemon --watch './**/*.ts' --exec 'ts-node' src/app.ts"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/swagger-ui-express": "^4.1.3",
    "babel-jest": "^27.4.6",
    "concurrently": "^7.0.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "body-parser": "^1.19.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "mysql2": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.3.0",
    "tsoa": "^3.14.1",
    "typeorm": "^0.2.41"
  }
}
